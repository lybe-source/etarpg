{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    
    <div class="container admin">
    
        <h1>{{ title }}</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        {{ form_start(form, {attr: {class: 'form-new'}}) }}

            {{ form_row(form.name) }}

            {{ form_row(form.amount) }}
            {{ form_row(form.amount_hidden, {'attr': {'id': 'amount_hidden'}}) }}

            {{ form_row(form.description) }}

            <button type="submit">Enregistrer</button>

        {{ form_end(form) }}

        <div class="back-url">
            <a href="{{ path('admin_statistics_index') }}"><ion-icon name="caret-back-circle-outline"></ion-icon><span>Retour</span></a>
        </div>
        
    </div>

    {% block javascripts %}
        {{ parent() }}
        
        <script src="{{ asset('assets/js/selectStatistics.js') }}"></script>
    {% endblock %}

{% endblock %}